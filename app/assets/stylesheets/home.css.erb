.home-main-tile{
  margin: 20px 0 18px 0;
  width: 474px;
  height: 299px;
  float: left;
  background-repeat: no-repeat;
  background-image: url('<%= asset_path 'main-left.gif' %>');

  color: #502D0E;
}
.home-main-tile-header{
    padding: 45px 10px 0 25px;
    font-size: 19px;
}
.home-main-tile-header.large{
    padding-top: 0;
    font-size: 29px;
    font-family: Georgia, "Times New Roman", Times, serif;
    font-style: italic;
}
.home-main-tile-text{
    padding: 12px 10px 0 25px;
    font-size: 13px;
    font-family: Arial, Helvetica, sans-serif;
}
.home-main-tile-image{
    margin-top: 20px;
    width: 209px;
    height: 299px;
    float: left;
    background-repeat: no-repeat;
    background-image: url('<%= asset_path 'main-right.jpeg' %>');
}
.home-categories-container{
    margin-top: 8px;
    border-top: 3px solid #333;
    width: 690px;
    overflow: auto;
}

.home-categories-container .category-tile{
    width: 25%;
    float:left;
    text-align: center;
    padding-bottom: 8px;
}
.category-tile .category-name{
    text-align: center;
    color: #502D0E;
    font-family: arial, verdana, sans-serif;
    font-size: 11px;
}
.category-tile .category-tile-image{
    margin: 0 auto;
    width: 110px;
    height: 73px;
    background-color: transparent;
    background-repeat: no-repeat;
    background-position: 0 0;
}
