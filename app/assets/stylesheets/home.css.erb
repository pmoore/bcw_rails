.home-main-tile{
  margin-top: 20px;
  width: 474px;
  height: 299px;
  float: left;
  background-repeat: no-repeat;
  background-image: url('<%= asset_path 'main-left.gif' %>');
  color: #502D0E;
}
.home-main-tile-header{
    padding: 45px 10px 0 25px;
    font-size: 19px;
}
.home-main-tile-header.large{
    padding-top: 0;
    font-size: 29px;
    font-family: Georgia, "Times New Roman", Times, serif;
    font-style: italic;
}
.home-main-tile-text{
    padding: 12px 10px 0 25px;
    font-size: 13px;
    font-family: Arial, Helvetica, sans-serif;
}
.home-main-tile-image{
    margin-top: 20px;
    width: 209px;
    height: 299px;
    float: left;
    background-repeat: no-repeat;
    background-image: url('<%= asset_path 'main-right.jpeg' %>');
}