.event-filter-sidebar{
  float:left;
  width: 170px;
  height: 100%;
  font-family: sans-serif;
  font-size: 11px;


  .event-filters{
    margin: 25px 0;
    .filter-header{
      font-style: italic;
    }
    .filter-header,
    .filter{
      padding: 5px 0;
    }
  }
}
.bcw-section-sub-header{
    margin: 20px 0;
}
.events-list-container{
  width: 502px;
  padding-left: 15px;
  float:left;
  border-left: 3px solid #FFE3EC;
  min-height: 500px;

  .events-list{
    margin: 20px 10px;
  }
}
.event-tile{
  height: 53px;
  margin-bottom: 10px;

  .event-date-container{
      width: 51px;
      height: 53px;
      background: transparent url('<%= asset_path 'events/event-icon.gif' %>') no-repeat 0 0;
      padding-right: 15px;
      float: left;

      .month{
          font-size: 12px;
          padding: 8px 0 0px 0;
          text-align: center;
      }
      .day{
          font-size: 22px;
          text-align: center;
      }
  }
}